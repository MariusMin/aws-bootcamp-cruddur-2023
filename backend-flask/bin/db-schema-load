#! /usr/bin/bash



#echo "db-schema-load"

schema_path="$(realpath .)/db/schema.sql"

echo $schema_path

if [ "$1" = "prod" ]; then
    echo "This is production environment"
    CON_URL=$PROD_CONNECTION_URL
else
    CON_URL=$CONNECTION_URL
    echo "This is NOT production environment"
fi

psql $CON_URL  cruddur < $schema_path